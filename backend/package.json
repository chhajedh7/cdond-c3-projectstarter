{
  "name": "glee2",
  "version": "1.0.0",
  "description": "This is just a test.",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register -r dotenv/config src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "lint": "tslint -p tsconfig.json -c tslint.json --fix",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js",
    "release": "standard-version",
    "premigrations:create": "npm run build",
    "migrations:create": "ts-node -r dotenv/config node_modules/.bin/typeorm migration:create",
    "premigrations:generate": "npm run build",
    "migrations:generate": "ts-node -r dotenv/config node_modules/.bin/typeorm migration:generate",
    "premigrations": "npm run build",
    "migrations": "ts-node -r dotenv/config node_modules/.bin/typeorm migration:run",
    "migrations-win": "ts-node node_modules/typeorm/cli.js migration:run",
    "premigrations:revert": "npm run build",
    "migrations:revert": "ts-node -r dotenv/config node_modules/.bin/typeorm migration:revert",
    "update:domain": "npm update @kiwihr/kiwi-domain"
  },
  "dependencies": {
    "@hapi/joi": "*",
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/cqrs": "^7.0.0",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/swagger": "^4.7.0",
    "@nestjs/typeorm": "^7.1.0",
    "@types/jsonwebtoken": "^8.5.3",
    "@types/winston": "^3.3.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cli-color": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "express-jwt": "^6.0.0",
    "glee-jwks-rsa": "^1.3.0",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "moment-timezone": "^0.5.33",
    "passport": "^0.4.1",
    "passport-auth0": "^1.3.2",
    "passport-jwt": "^4.0.0",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.4.0",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.45",
    "uuid": "^8.3.2",
    "winston-loggly-bulk": "^3.1.0",
    "winston-slack-webhook": "^0.1.7"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.0.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^27.0.0",
    "@types/joi": "^14.3.5",
    "@types/node": "^16.11.6",
    "@types/supertest": "^2.0.11",
    "jest": "^27.4.6",
    "nodemon": "^2.0.14",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.1",
    "supertest": "^6.2.1",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "tslint": "^6.1.3",
    "typescript": "^4.5.5",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testMatch": [
      "**/*.spec.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "<rootDir>/coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/migrations/**/*.ts",
      "!src/modules/config/**/*.ts",
      "!src/modules/app/**/*.ts",
      "!src/modules/auth/**/*.ts",
      "!src/*.ts"
    ],
    "testEnvironment": "node",
    "verbose": false
  }
}
